<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mb-9">
      <h2 class="text-center">管理者ログイン</h2><br>
      <%= form_with model: @admin, url: new_admin_session_path do |f| %>
      
      <div class="field">
       <%= f.label :email %><br />
       <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "col-12" %>
      </div>
      
      <div class="field">
       <%= f.label :password %><br />
       <%= f.password_field :password, autocomplete: "current-password",class: "col-12" %> 
      </div>
      
      <% if devise_mapping.rememberable? %>
       <div class="field">
       <%= f.check_box :remember_me %>
       <%= f.label :remember_me %>
       </div>
      <% end %>
      
      <button class="btn btn-primary btn-block">ログイン</button>
      
      <% end %>
    </div>
  </div>
</div>




