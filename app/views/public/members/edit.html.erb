<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-sm-0 mb-9">
     <br>
     <h2 class="text-center">ユーザー情報を編集する</h2>

     <%= form_with model: @member, url: member_path, method: :patch do |f| %>
     <div class="field">
       <div class="bg-light text-black">プロフィール画像</div><br>
       <%= f.file_field :profile_image, accept: "image/*" %>
     </div><br />
     <div class="field">
       <div class="bg-light text-black">名前</div>
       <%= f.text_field :name, class: "form-control" %>
     </div><br>
     <div class="field">
       <div class="bg-light text-black">自己紹介</div><br />
       <%= f.text_area :bio , class: "form-control" %>
     </div><br />
     <button class="btn btn-success btn-block" type="submit">変更を保存</button>
     <% end %>
    </div>
  </div>
</div>


