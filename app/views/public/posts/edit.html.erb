<div class="container">
  <div class="row">
    <div class="mx-auto col-sm-12 col-md-8 col-lg-5 px-sm-0 mb-9">
     <br>
     <h2 class="text-center">旅の記録を編集する</h2>

     <%= form_with model: @post, url: update_post_path(@post.id), method: :patch do |f| %>
     <div class="field">
       <div class="bg-light text-black">タイトル</div><br>
       <%= f.text_field :title, class: "form-control" %>
     </div><br />
     <div class="field">
       <div class="bg-light text-black">旅行先</div>
     </div><br>
     <div class="field">
       <div class="bg-light text-black">画像</div><br />
       <%= f.file_field :image, accept: "image/*" %>
     </div><br />
     <div class="field">
       <div class="bg-light text-black">旅の思い出</div><br />
       <%= f.text_area :content , class: "form-control" %>
     </div><br />
     <button class="btn btn-success btn-block" type="submit">更新する</button>
     <% end %>
    </div>
  </div>
</div>


