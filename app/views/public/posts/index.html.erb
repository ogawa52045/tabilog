<div class="card-list-container py-5">
  <% @posts.each do |post| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <p>ここに画像が入る</p>
      <div class="card-body">
        <div class="row">
          <div class="col-10">
            <p class="card-title">
              <%= link_to(posts_path(post.id), class: "text-dark") do %>
                <strong><span><%= post.title %></span></strong>
              <% end %>
            </p>
            <p class="card-text">旅の記録:<%= post.content %></p>
            <span>By </span>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>