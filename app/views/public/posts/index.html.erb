<div class="card-list-container py-5">
  <% @posts.each do |post| %>
    <div class="card w-50 mx-auto mt-4 shadow-lg">
      <% if post.image.attached? %>
       <%= image_tag post.image, class: "card-img-top" %>
      <% else %>
       <%= image_tag 'no_image', class: "card-img-top" %>
      <% end %>
      <div class="card-body">
        <div class="row">
          <div class="col-10">
            <p class="card-title">
              <%= link_to(post_path(post), class: "text-dark") do %>
                <strong><span><%= post.title %></span></strong>
              <% end %>
            </p>
            <p class="card-text">【旅の記録】<br><%= post.content %></p>
            <span>
              By
              <%= link_to member_path(post.member.id) do %>
               <%= post.member.name %>
              <% end %>
            </span><br>
            <div class="text-right">
             <span>
               <%= link_to "コメント#{post.comments.count}件", post_path(post.id) %> ♥<%= post.favorites.count %>いいね
             </span>
            </div>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>